// schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL") // uses connection pooling
}

model User {
    id            Int       @id @default(autoincrement())
    name          String?
    email         String?   @unique
    password      String

    client       Client?
    suplier      Supplier?

    @@map(name: "users")
}

model Client {
    id         Int     @id
    user       User    @relation(fields: [id], references: [id])
    credits    Decimal

    @@map(name: "clients")
}

model Supplier {
    id         Int     @id
    user       User    @relation(fields: [id], references: [id])
    cnpj       Int     @unique

    @@map(name: "suppliers")
}